# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
# Replace with your actual MongoDB connection string
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@YOUR_CLUSTER.mongodb.net/taskflowpro?retryWrites=true&w=majority

# JWT Secret (Generate a strong random string - min 32 chars)
# Use: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_YOUR_SECURE_JWT_SECRET_MIN_32_CHARACTERS

# JWT Expiry
JWT_EXPIRY=7d

# Auth
ADMIN_INVITE_CODE=REPLACE_WITH_YOUR_ADMIN_CODE

# Frontend URL
CLIENT_URL=http://localhost:5173

# Java Microservice
JAVA_REPORT_SERVICE_URL=http://localhost:8080

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_CLOUD_NAME
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_API_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_API_SECRET

# Email Service (optional - for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=YOUR_EMAIL@gmail.com
SMTP_PASS=YOUR_APP_PASSWORD
